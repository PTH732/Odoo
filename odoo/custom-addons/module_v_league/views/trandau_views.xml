<odoo>
    <record id="view_football_match_tree" model="ir.ui.view">
        <field name="name">football.match.form</field>
        <field name="model">football.match</field>
        <field name="arch" type="xml">
            <form string="Football Matches">
                <field name="name"/>
                <field name="match_date"/>
                <field name="home_club_id"/>
                <field name="away_club_id"/>
                <field name="home_score"/>
                <field name="away_score"/>
                <field name="tournament_id"/>
            </form>
        </field>
    </record>

    <record id="view_football_match_form" model="ir.ui.view">
        <field name="name">football.match.form</field>
        <field name="model">football.match</field>
        <field name="arch" type="xml">
            <form string="Football Match">
                <sheet>
                    <group>
                        <field name="home_club_id"/>
                        <field name="away_club_id"/>
                        <field name="match_date"/>
                        <field name="home_score"/>
                        <field name="away_score"/>
                        <field name="tournament_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_calendar_football_match" model="ir.ui.view">
        <field name="name">football.match.calendar</field>
        <field name="model">football.match</field>
        <field name="arch" type="xml">
            <calendar string="Match Calendar" date_start="match_date" color="home_club_id">
                <field name="name"/>
            </calendar>
        </field>
    </record>
    
    <record id="action_match" model="ir.actions.act_window">
        <field name="name">Football Matches</field>
        <field name="res_model">football.match</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="view_id" ref="view_calendar_football_match"/>
    </record>

</odoo>
