<odoo>
    <record id="view_football_standing_list" model="ir.ui.view">
        <field name="name">football.standing.list</field>
        <field name="model">football.standing</field>
        <field name="arch" type="xml">
            <list string="Bảng Xếp Hạng" default_order="points desc">
                <field name="club_id"/>
                <field name="tournament_id"/>
                <field name="played"/>
                <field name="won"/>
                <field name="draw"/>
                <field name="lost"/>
                <field name="points"/>
            </list>
        </field>
    </record>

    <record id="action_bxh" model="ir.actions.act_window">
        <field name="name">Bảng Xếp Hạng</field>
        <field name="res_model">football.standing</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p>Bảng xếp hạng các câu lạc bộ theo từng giải đấu.</p>
        </field>
    </record>

</odoo>
