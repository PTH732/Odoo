<odoo>
    <record id="player_view_form" model="ir.ui.view">
        <field name="name">football.player.form</field>
        <field name="model">football.player</field>
        <field name="arch" type="xml">
            <form string="Player">
                <sheet>
                    <field name="image" widget='image' class='oe_avatar' />
                    <div class='oe_avatar'>
                        <label for='name'></label>
                        <h1>
                            <field name='name'></field>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="hometown" />
                            <field name="gender" />
                            <field name="day_of_birth" />
                        </group>
                        <group>
                            <field name="height" />
                            <field name="weight" /> 
                        </group>
                    </group>

                    <group>
                        <field name="name"/>
                        <field name="position"/>
                        <field name="club_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="player_view_list" model="ir.ui.view">
        <field name="name">football.player.list</field>
        <field name="model">football.player</field>
        <field name="arch" type="xml">
            <list string="Player">
                <field name="name" />
                <field name="club_id" />
                <field name="hometown" />
                <field name="gender" />
                <field name="position" />
                <field name="height" />
                <field name="weight" />                
            </list>
        </field>
    </record>

    <record id="player_action" model="ir.actions.act_window">
        <field name="name">Players</field>
        <field name="res_model">football.player</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_player" model="ir.actions.act_window">
        <field name="name">Cầu Thủ</field>
        <field name="res_model">football.player</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
