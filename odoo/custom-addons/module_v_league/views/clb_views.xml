<odoo>
    <record id="view_club_form" model="ir.ui.view">
        <field name="name">football.club.form</field>
        <field name="model">football.club</field>
        <field name="arch" type="xml">
            <form string="Club">
                <field name="image" widget='image' class='oe_avatar' />
                <div class='oe_avatar'>
                    <label for='name'></label>
                    <h1>
                        <field name='name'></field>
                    </h1>
                </div>
                <group>
                    <field name="city" />
                    <field name="stadium"/>
                    <field name="coach_id"/>
                    <field name="ingredient"/>
                    <field name="cup"/>
                </group>

                 <notebook>
                    <page string="Players">
                        <field name="player_ids">
                            <list>
                               <field name="name"/>
                            </list>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="view_club_list" model="ir.ui.view">
        <field name="name">football.club.list</field>
        <field name="model">football.club</field>
        <field name="arch" type="xml">
            <list string="Club">
                <field name="name"/>
                <field name="city" />
                <field name="stadium"/>
                <field name="player_ids"/>
                <field name="coach_id"/>
                <field name="ingredient"/>
                <field name="cup"/>
            </list>
        </field>
    </record>

    

  <record id="action_club" model="ir.actions.act_window">
    <field name="name">Câu Lạc Bộ</field>
    <field name="res_model">football.club</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>