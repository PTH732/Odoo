<odoo>
    <record id="player_view_form" model="ir.ui.view">
        <field name="name">player1.form</field>
        <field name="model">player1</field>
        <field name="arch" type="xml">
            <form string="Player1">
                <sheet>
                    <field name="image" widget='image' class='oe_avatar' />
                    <div class='oe_avatar'>
                        <label for='name'></label>
                        <h1>
                            <field name='name'></field>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="country" />
                            <field name="gender" />
                            <field name="day_of_birth" />
                        </group>
                        <group>
                            <field name="position" />
                            <field name="height" />
                            <field name="weight" /> 
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="player_view_list" model="ir.ui.view">
        <field name="name">player1.list</field>
        <field name="model">player1</field>
        <field name="arch" type="xml">
            <list string="Player1">
                <field name="name" />
                <field name="country" />
                <field name="gender" />
                <field name="position" />
                <field name="height" />
                <field name="weight" />                
            </list>
        </field>
    </record>

    <record id="player_action" model="ir.actions.act_window">
        <field name="name">Players1</field>
        <field name="res_model">player1</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem 
    id="player_menu" 
    name="Players1" 
    groups="base.group_user"
    />
    <menuitem 
    id="player_menu_1" 
    name="Players1"
    parent="player_menu"
    action="player_action" 
    groups="base.group_user"
    />
</odoo>